  <para style="p">
    <verse number="28" style="v" sid="PRO 1:28" />« Alors ils m’appelleront, <char style="w" strong="H6030">et</char> <char style="w" strong="H7121">je</char> <char style="w" strong="H3808">ne</char> <char style="w" strong="H6030">répondrai</char> <char style="w" strong="H3808">pas</char> ; ils <char style="w" strong="H4672">me</char> <char style="w" strong="H7836">chercheront</char>, <char style="w" strong="H6030">et</char> ils <char style="w" strong="H3808">ne</char> <char style="w" strong="H4672">me</char> <char style="w" strong="H4672">trouveront</char> <char style="w" strong="H3808">pas</char>. <verse eid="PRO 1:28" /><verse number="29" style="v" sid="PRO 1:29" />Parce qu’ils ont <char style="w" strong="H8130">haï</char> <char style="w" strong="H3068">la</char> <char style="w" strong="H1847">science</char>, <char style="w" strong="H3068">et</char> qu’ils n’ont <char style="w" strong="H3808">pas</char> désiré <char style="w" strong="H3068">la</char> <char style="w" strong="H3374">crainte</char> <char style="w" strong="H3374">de</char> Yahweh, <verse eid="PRO 1:29" /><verse number="30" style="v" sid="PRO 1:30" />parce qu’ils n’ont <char style="w" strong="H3808">pas</char> voulu <char style="w" strong="H6098">de</char> <char style="w" strong="H6098">mes</char> <char style="w" strong="H6098">conseils</char>, <char style="w" strong="H3808">et</char> qu’ils ont <char style="w" strong="H5006">dédaigné</char> toutes <char style="w" strong="H6098">mes</char> <char style="w" strong="H8433">réprimandes</char>, <verse eid="PRO 1:30" /><verse number="31" style="v" sid="PRO 1:31" />ils mangeront <char style="w" strong="H1870">du</char> <char style="w" strong="H6529">fruit</char> <char style="w" strong="H1870">de</char> <char style="w" strong="H7646">leur</char> <char style="w" strong="H1870">voie</char>, <char style="w" strong="H1870">et</char> ils se <char style="w" strong="H7646">rassasieront</char> <char style="w" strong="H1870">de</char> leurs propres <char style="w" str