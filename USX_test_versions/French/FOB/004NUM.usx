<verse eid="NUM 16:30" /><verse number="31" style="v" sid="NUM 16:31" /><char style="w" strong="H1696">Et</char> <char style="w" strong="H1697">dès</char> <char style="w" strong="H1697">qu'il</char> eut <char style="w" strong="H3615">achevé</char> <char style="w" strong="H1697">de</char> <char style="w" strong="H1696">prononcer</char> toutes <char style="w" strong="H1696">ces</char> <char style="w" strong="H1697">paroles</char>, <char style="w" strong="H1696">le</char> sol <char style="w" strong="H1697">qui</char> <char style="w" strong="H1961">était</char> <char style="w" strong="H8478">sous</char> <char style="w" strong="H1697">eux</char>, <char style="w" strong="H1697">se</char> <char style="w" strong="H1234">fendit</char>; <verse eid="NUM 16:31" /><verse number="32" style="v" sid="NUM 16:32" /><char style="w" strong="H1004">Et</char> <char style="w" strong="H6605">la</char> terre <char style="w" strong="H6605">ouvrit</char> <char style="w" strong="H6605">sa</char> <char style="w" strong="H6310">bouche</char>, <char style="w" strong="H1004">et</char> <char style="w" strong="H6605">les</char> <char style="w" strong="H1104">engloutit</char> <char style="w" strong="H1104">avec</char> <char style="w" strong="H1004">leurs</char> <char style="w" strong="H1004">familles</char>, <char style="w" strong="H1004">et</char> <char style="w" strong="H3605">tous</char> <char style="w" strong="H6605">les</char> hommes qui étaient <char style="w" strong="H1004">à</char> Coré, <char style="w" strong="H1004">et</char> <char style="w" strong="H3605">tout</char> leur bien. <verse eid="NUM 16:32" /><verse number="33" style="v" sid="NUM 16:33" /><char style="w" strong="H1992">Ils</char> <char style="w" strong="H3381">descendirent</char>, <char style="w" strong="H1992">eux</char> <char style="w" strong="H5921">et</char> <char style="w" strong="H3605">tout</char> <char style="w" strong="H1992">ce</char> <char style="w" strong="H1992">qui</char> <char style="w" strong="H3381">leur</char> a