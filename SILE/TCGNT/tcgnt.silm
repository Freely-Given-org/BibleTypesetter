masterfile: 0.0
metadata:
  title: Text-Critical Greek New Testament
font:
  family: Libertinus Serif
  size: 10pt
language: el
sile:
  options:
    # class: resilient.book # optional (default)
    papersize: 7.44in x 9.68in   # 189mm x 246mm Crown Quarto
    layout: marginal             # We need big side margins for the notes
    resolution: 300
  settings:
    textsubsuper.fake: true      # Libertinus has decent superscripts, but I prefer the fake ones
    document.baselineskip: 1.2em # Bad, but grid typesetting does not work well either yet.
    document.parskip: 0          # idem
    document.lineskip: 0         # idem
    # typesetter.italicCorrection: true # not yet available
  packages:
    - resilient.bible.usx
